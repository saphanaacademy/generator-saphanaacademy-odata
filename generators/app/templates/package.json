{
    "name": "<%= projectName %>",
    "version": "0.0.1",
    "engines": {
        "node": "12.x"
    },
    "dependencies": {
        "@sap/cds": "^5",
<% if(v2support){ -%>
        "@sap/cds-odata-v2-adapter-proxy": "^1",
<% } -%>
        "@sap/hana-client": "^2",
<% if(auth){ -%>
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3",
        "@sap/audit-logging": "^5",
        "passport": "^0.4.1",
<% } -%>
        "express": "^4"
    },
    "devDependencies": {
    },
    "scripts": {
        "start": "npx cds run"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            }
<% if(auth){ -%>
            ,
            "uaa": {
                "kind": "xsuaa"
            }
<% } -%>
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}
